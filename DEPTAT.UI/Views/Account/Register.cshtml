@model DEPTAT.Application.Models.Accounts.RegisterViewModel
                     
                     
<div class="row clearfix">
   <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <div class="card">
         <div class="header">
            <h2>
               REGISTER A USER
            </h2>
            <ul class="header-dropdown m-r--5">
               <li class="dropdown">
                  <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                     <i class="material-icons">more_vert</i>
                  </a>
                  
               </li>
            </ul>
         </div>
         <div class="body">
            <form asp-controller="Account" asp-action="Register" method="post" role="form">
               <div asp-validation-summary="All" class="text-danger"></div>
               <div class="msg">Register a new User</div>
               <div class="input-group">
                  <span class="input-group-addon">
                     <i class="material-icons">person</i>
                  </span>
                  <div class="form-line">
                     <input asp-for="FirstName" class="form-control" placeholder="First name"  autofocus>
                  </div>
                  <span asp-validation-for="FirstName" class="text-danger"></span>
               </div>
               <div class="input-group">
                  <span class="input-group-addon">
                     <i class="material-icons">person</i>
                  </span>
                  <div class="form-line">
                     <input asp-for="Othername" class="form-control" placeholder="Othername"  autofocus>
                  </div>
                  <span asp-validation-for="Othername" class="text-danger"></span>
               </div>
               <div class="input-group">
                  <span class="input-group-addon">
                     <i class="material-icons">person</i>
                  </span>
                  <div class="form-line">
                     <input asp-for="LastName" class="form-control" placeholder="Lastname"  autofocus>
                  </div>
                  <span asp-validation-for="LastName" class="text-danger"></span>
               </div>
               <div class="input-group">
                  <span class="input-group-addon">
                     <i class="material-icons">email</i>
                  </span>
                  <div class="form-line">
                     <input asp-for="Email" class="form-control" placeholder="Email"  autofocus>
                  </div>
                  <span asp-validation-for="Email" class="text-danger"></span>
               </div>
               <div class="input-group">
                  <span class="input-group-addon">
                     <i class="material-icons">person</i>
                  </span>
                  <div class="form-line">
                     <input asp-for="Username" class="form-control" placeholder="User name" required>
                  </div>
                  <span asp-validation-for="Username" class="text-danger"></span>
               </div>
               @*<div class="input-group">
                  <span class="input-group-addon">
                     <i class="material-icons">lock</i>
                  </span>
                  <div class="form-line">
                     <input asp-for="Name" class="form-control" placeholder="Name" required>
                  </div>
                  <span asp-validation-for="Name" class="text-danger"></span>
               </div>*@
               <div class="input-group">
                  <span class="input-group-addon">
                     <i class="material-icons">lock</i>
                  </span>
                  <div class="form-line">
                     <input asp-for="Password" class="form-control" placeholder="Password" required>
                  </div>
                  <span asp-validation-for="Password" class="text-danger"></span>
               </div>
               <div class="input-group">
                  <span class="input-group-addon">
                     <i class="material-icons">lock</i>
                  </span>
                  <div class="form-line">
                     <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" required>
                  </div>
                  <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
               </div>
               <div class="mb-3">
                  <label asp-for="RoleSelected" ></label>
                  <div class="input-group input-group-merge">
                     <select asp-for="RoleSelected" asp-items="@Model.RoleList" class="form-control">
                        <option disabled selected>--Select Role--</option>
                     </select>
                  </div>
               </div>
               
               <button type="submit" class="btn btn-block btn-lg bg-pink waves-effect">SIGN UP</button>

               @*<div class="m-t-25 m-b--5 align-center">
                  <a href="sign-in.html">You already have a membership?</a>
               </div>*@
            </form>
         </div>

      </div>
   </div>
</div>