@model IEnumerable<DEPTAT.Application.Responses.CourseResponse>

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    DETAILED COURSES VIEW
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a asp-controller="Course" asp-action="Index">Add Department</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
            @if (Model.Count() != 0)
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                        <thead>
                        <tr>
                            <th>Name</th>
                            <th>Code</th>
                            <th>Programme</th>
                            <th>Description</th>
                            <th>Created By</th>
                            <th>Last Modified</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var data in Model)
                            {
                                <tr>
                                    <td>@data.Name</td>
                                    <td>@data.Code</td>
                                    <td>@data.Programme.Name</td>
                                    <td>@data.Description</td>
                                    <td>@data.CreatedBy</td>
                                    <td>@data.LastModifiedBy</td>
                                    <td>
                                        <span>
                                            <i class="material-icons text-danger del" id="@data.Id" style="cursor: pointer">delete</i>
                                        </span>
                                    </td>
                                </tr>
                            }

                        }
                        else
                        {
                            <tr>
                                <td colspan="3">Nothing found</td>

                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert bg-green alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    Sorry no records found...
                </div>
            }
                </div>
           
        </div>
    </div>
</div>
<!-- #END# Exportable Table -->