
@model IEnumerable<DEPTAT.Application.Responses.CourseResponse>
@{
	var programmeList = ViewBag.ProgrammeList as List<ProgrammeResponse>;
}
<div class="container-fluid">
	<div class="block-header">
		<h2>Course</h2>
	</div>

	<div class="row clearfix">
		<!-- Task Info -->
		<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
			<div class="card">
				<div class="header">
					<h2>ADD COURSE</h2>
				</div>
				<div class="body">
					<form>
						<div class="">
							<div class="form-line">

								<input type="number" id="courseId" class="form-control">
								<label class="form-label">Course</label>
								<input type="text" id="courseName" class="form-control">

							</div>
						</div>

						<div class="">
							<div class="form-line">
								<label class="form-label">Course Code</label>
								<input type="text" id="courseCode" class="form-control">

							</div>
						</div>

						<div class = "row" style = "margin-top: 10px;">
							<div class = "col-md-12">
								<label class = "form-label">Programme</label>
								<div class = "form-group">
									<select id = "programmeId" class = "selectpicker form-control">
										<option>Select Programme</option>
										@foreach (var programme in programmeList)
										{
											<option value = "@programme.Id">@programme.Name</option>
										}
									</select>
								</div>
							</div>
						</div>


						<div class="">
							<div class="form-line">
								<label class="form-label">Description</label>
								<textarea name="description" id="description" cols="15" rows="5" class="form-control no-resize" required></textarea>
							</div>
						</div>

						<div align="right">
							<button type="button" id="saveCourse" class="btn btn-primary m-t-15 waves-effect">
								SAVE
							</button>
							<button type="button" id="updateCourse" class="btn btn-primary m-t-15 waves-effect">
								UPDATE
							</button>
						</div>

					</form>

				</div>
			</div>
		</div>
		<!-- #END# Task Info -->
		<!-- Browser Usage -->
		<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
			<div class="card">
				<div class="header">
					<h2>View</h2>
				</div>
				<div class="body">
					<div class="table-responsive" style="max-height: 250px; overflow-y: auto;">
						<div class="card">
							<table class="table table-hover dashboard-task-infos">
								<thead>
									<tr>
										<th>Name</th>
										<th>Course Code</th>
										<th>Programme</th>
										<th>Action</th>
									</tr>
								</thead>
								<tbody>
									@if (Model.Any())
									{
										@foreach (var data in Model)
										{
											<tr>
												<td>@data.Name</td>
												<td>@data.Code</td>
												<td>@data.Programme?.Name</td>
												<td>
													<span>
														<i class="material-icons text-primary edit" id="@data.Id" style="cursor:pointer">edit</i>
													</span>&nbsp;&nbsp;
													<span>
														<i class="material-icons text-danger del" id="@data.Id" style="cursor:pointer">delete</i>
													</span>
												</td>
											</tr>
										}

									}
									else
									{
										<tr>
											<td colspan="3">Nothing found</td>

										</tr>
									}

								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- #END# Browser Usage -->
	</div>
</div>
<script src="~/js/apps/settings/course.js"></script>
