@model IEnumerable<DEPTAT.Application.Responses.OtpResponse>

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    DETAILED PROGRAMME VIEW
                </h2>
                @*<ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a asp-controller="Programme" asp-action="Index">Add Programme</a></li>
                        </ul>
                    </li>
                </ul>*@
            </div>
            <div class="body">
                @if (Model.Count() != 0)
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Student Number</th>
                                    <th>Name</th>
                                    <th>OTP</th>
                                    <th>Year</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    @foreach (var data in Model)
                                    {
                                        <tr>
                                            <td><img src="~/uploads/@data.Student.ImageUrl" style="width: 10%; height: 10%" /></td>
                                            <td>@data.StudentNumber</td>

                                            <td>@data.Student.FullName</td>
                                            <td>@data.OtpCode</td>
                                            <td>@data.CurrentYear</td>

                                        </tr>
                                    }

                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3">Nothing found</td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert bg-green alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        Sorry no records found...
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- #END# Exportable Table -->