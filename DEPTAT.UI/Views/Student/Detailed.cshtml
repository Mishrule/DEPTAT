
@model IEnumerable<DEPTAT.Application.Responses.StudentResponse>

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    DETAILED STUDENT VIEW
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a asp-controller="Student" asp-action="Register">Add Student</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                @if (Model.Count() != 0)
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                            <thead>
                                <tr>
                                    
                                    
                                    <th>image</th>
                                    <th>IndexNumber</th>
                                    <th>FullName</th>
                                    <th>Programme</th>
                                    <th>Department</th>
                                    <th>Faculty</th>
                                    <th>Year Group</th>
                                    <th>Level</th>
                                    <th>Admitted Year</th>
                                    <th>Class Year</th>
                                    <th>Created By</th>
                                    <th>Last Modified</th>
                                    <th>Action</th>
                                    
                                    
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    @foreach (var data in Model)
                                    {
                                        <tr>
                                            
                                            
                                             <td><img src="~/uploads/@data.ImageUrl" width="100%" /></td>

                                            <td>@data.IndexNumber</td>
                                            <td>@data.FullName</td>
                                           <td>@data.Programme?.Name</td>
                                            <td>@data.Programme?.Department?.Name</td>
                                            <td>@data.Programme?.Department?.Faculty?.Name</td>
                                            <td>@data.YearGroup</td>
                                            <td>@data.Level</td>
                                            <td>@data.AdmittedYear</td>
                                            <td>@data.ClassYear</td>
                                            <td>@data.CreatedBy</td>
                                            <td>@data.LastModifiedBy</td>
                                            
                                            <td>
                                                <span>
                                                    @*<a asp-controller="Student" asp-action="GetStudent" asp-route-Id="@data.Id">*@
                                                        <i class="material-icons text-success update" id="@data.Id" style="cursor: pointer">edit</i>
                                                    <i class="material-icons text-primary detail" id="@data.Id" style="cursor: pointer">remove_red_eye</i>
                                                    @*</a>*@
                                                   
                                                </span>
                                            </td>
                                        </tr>
                                    }

                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3">Nothing Found</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert bg-green alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        Sorry no records found...
                    </div>
                }
            </div>

        </div>
    </div>
</div>
<!-- #END# Exportable Table -->
<script>
    $(document).ready(function() {
        $(document).on('click',
            '.update',
            function() {
                var Id = $(this).attr('id');
                var baseUrl = $('#base_url').text();
                window.location.href = baseUrl + '/Student/GetStudent/' + Id;
               
            });

        $(document).on('click',
            '.detail',
            function() {
                var Id = $(this).attr('id');
                var baseUrl = $('#base_url').text();
                window.location.href = baseUrl + '/Student/GetDetailedStudent/' + Id;
               
            });
    })
</script>