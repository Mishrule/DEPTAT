<script type="text/ecmascript">
	const chooseFile = document.getElementById("imageUrl");
	const imgPreview = document.getElementById("img-preview");


		chooseFile.addEventListener("change", function () {
	  getImgData();
	});

		function getImgData() {
	  const files = chooseFile.files[0];
	  if (files) {
		const fileReader = new FileReader();
		fileReader.readAsDataURL(files);
		fileReader.addEventListener("load", function () {
		  imgPreview.style.display = "block";
		  imgPreview.innerHTML = '<img src="' + this.result + '" width="50%"/>';
		});
	  }
	}
</script>

<script>
	$(document).ready(function () {
		$('#registerForm').submit(function (event) {
			event.preventDefault(); // Prevent the form from submitting normally

			// Create a new FormData object to store the form data
			//var formData = new FormData(this);

			// Create a new FormData object to store the form data
			var formData = new FormData(this);

			// Get the selected image file
			var imageFile = $('#imageUrl')[0].files[0];

			// Add the image file to the formData with the key 'imageUrl'
			formData.append('imageUrl', imageFile);

			$.ajax({
				url: $('#base_url').text() + '/Student/Register',
				type: 'POST',
				data: formData,
				processData: false,
				contentType: false,
				success: function (response) {
					// Handle the success response here
					if (response.isSuccess) {
						showNotificationSuccessMessage(response.message, "Success");

					} else {
						showNotificationErrorMessage("Failed", response.message, "error");
					}
					$('#registerForm')[0].reset();
					imgPreview.innerHTML = "";
				},
				error: function (xhr, status, error) {
					// Handle the error response here
					showNotificationErrorMessage("Failed", error, "error");
					console.error(error);
				}
			});
		});
	});
</script>