@{
	var student = ViewBag.UploadedStudents as BaseResponse<StudentResponse>;
}

<div class="container-fluid">

	<!-- Horizontal Layout -->
	<div class="row clearfix">
		<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
			<div class="card">
				<div class="header">
					<h2>
						Update Students
					</h2>
					<div align="center">
					</div>
					<ul class="header-dropdown m-r--5">
						<li class="dropdown">
							<a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
								<i class="material-icons">more_vert</i>
							</a>
							<ul class="dropdown-menu pull-right">
								@*<li><a href="javascript:void(0);">Add Data</a></li>*@
								<li><a href="~/uploads/template/StudentTemplate.xlsx">Download Template</a></li>
								@*<li><a href="javascript:void(0);">Something else here</a></li>*@
							</ul>
						</li>
					</ul>
				</div>
				<div class="body">
					@*<form action="/target" class="dropzone" id="my-form"></form>*@
					<form class="form-horizontal" id="registerForm" method="post" asp-action="Upload" asp-controller="Student" enctype="multipart/form-data">

						<div class="row clearfix">
							<div class="col-lg-2 col-md-2 col-sm-4 col-xs-4 form-control-label">
								<label for="file">Select Excel File:</label>
							</div>
							<div class="col-lg-4 col-md-5 col-sm-4 col-xs-4">
								<label class="custom-file-input" style="margin-top: 10px;">
									<input type="file" name="file" id="file" class="form-control-file" />
								</label>
							</div>
							<button type="submit" class="btn btn-primary">Upload</button>

							@*<div class="form-group">


							</div>
							<button type="submit" class="btn btn-primary">Upload</button>
							*@

						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
	<!-- #END# Horizontal Layout -->
	<!-- Horizontal Layout -->
	<div class="row clearfix">
		<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
			<div class="card">
				<div class="header">
					<h2>
						UPLOAD STUDENT SUMMARY
					</h2>
					<ul class="header-dropdown m-r--5">
						<a asp-controller="Student" asp-action="Index" class="btn btn-primary"> Back</a>
					</ul>
				</div>
				<div class="body">
                
         @if (student != null)
         {
	         @if (student.IsSuccess)
	         {
		         <p style="font-weight: bold;">@student.Message</p>
		         @foreach (var data in student.Errors)
		         {
			         <div class="alert bg-green alert-dismissible" role="alert">
				         <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
				         @data
			         </div>
		         }
	         }
	         else
	         {
		         <div class="alert bg-red alert-dismissible" role="alert">
			         <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
			         @student.Message
		         </div>
		         @foreach (var data in student.Errors)
		         {
			         <div class="alert bg-red alert-dismissible" role="alert">
				         <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
				         @data
			         </div>
		         }
	         }
         }       
					
				</div>
			</div>
		</div>
	</div>
	<!-- #END# Horizontal Layout -->

</div>



