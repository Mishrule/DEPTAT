@model DEPTAT.Application.Models.Accounts.UserClaimsViewModel
         
<div class="row clearfix">
    <!-- Task Info -->
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
        <div class="card">
            
            <div class="header">
                <h2>
                    USER MANAGER CLAIMS
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            @*<li><a asp-controller="Department" asp-action="Index">Add Department</a></li>*@
                        </ul>
                    </li>
                </ul>
            </div>
            
            
            <div class="body">
                <form method="post">
                    <input asp-for="@Model.UserId" hidden />
                    @*<div class="card">*@
                        <div class="card-header">
                            <h2>Manage User Claims / Permission</h2>
                        @*</div>
                        <div class="card-body">*@
                            @for (int i = 0; i < Model.Claims.Count; i++)
                            {
                                <div class="m-2 form-check">
                                    <input asp-for="@Model.Claims[i].ClaimType" hidden />
                                    <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input" />
                                    <label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">
                                        @Model.Claims[i].ClaimType
                                    </label>
                                </div>
                            }
                            <div asp-validation-summary="All" class="text-danger"></div>
                        @*</div>*@
                        <div class="card-footer">
                            <input type="submit" value="Update" class="btn btn-success" />
                            <a asp-action="Index" class="btn btn-warning">Back to Users</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- #END# Task Info -->

</div>